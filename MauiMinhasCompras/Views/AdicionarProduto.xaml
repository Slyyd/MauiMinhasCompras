<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMinhasCompras.Views.AdicionarProduto"
             Title="Adicionar Produto">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
        <ToolbarItem Text="Voltar" Clicked="ToolbarItem_Clicked_1"/>

    </ContentPage.ToolbarItems>


    <VerticalStackLayout Spacing="10" Padding="10" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand">

        <Label Text="Descrição do produto:" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" />
        <Entry x:Name="txt_desc" Placeholder="Ryzen 5600g" Margin="10"/>

        <Label Text="Quantidade:" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"/>
        <Entry x:Name="txt_quant" Keyboard="Numeric" Placeholder="5" Margin="10"/>

        <Label Text="Preço Unitário:" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"/>
        <Entry x:Name="txt_prec" Keyboard="Numeric" Placeholder="500.0"  Margin="10"/>
        
        


    </VerticalStackLayout>
</ContentPage>